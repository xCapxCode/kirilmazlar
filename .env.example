# ===========================================
# KIRILMAZLAR ENVIRONMENT TEMPLATE
# ===========================================
# Copy this file to .env.development, .env.production, or .env.staging
# and configure the values according to your environment

# App Configuration
VITE_APP_NAME="Kırılmazlar Panel"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT="development"
VITE_APP_DEBUG="true"

# API Configuration
VITE_API_BASE_URL="http://localhost:3001/api"
VITE_API_TIMEOUT="30000"
VITE_API_RETRY_ATTEMPTS="3"

# Backend Configuration
NODE_ENV="development"
PORT="3001"
DATABASE_URL="postgresql://username:password@localhost:5432/kirilmazlar"
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"
CORS_ORIGIN="http://localhost:5000"

# Feature Flags
VITE_ENABLE_CONSOLE_LOGS="true"
VITE_ENABLE_DEVELOPER_TOOLS="true"
VITE_ENABLE_MOCK_DATA="true"
VITE_ENABLE_STORAGE_DEBUG="true"

# Performance Settings
VITE_ENABLE_SERVICE_WORKER="false"
VITE_ENABLE_LAZY_LOADING="true"
VITE_BUNDLE_ANALYZER="false"

# Security Settings
VITE_ENABLE_CSP="false"
VITE_ENABLE_HTTPS="false"
VITE_SESSION_TIMEOUT="3600000"

# Storage Configuration
VITE_STORAGE_TYPE="api"
VITE_STORAGE_PREFIX="kirilmazlar_dev_"
VITE_STORAGE_ENCRYPT="false"

# Monitoring & Analytics
VITE_ENABLE_ANALYTICS="false"
VITE_ENABLE_ERROR_REPORTING="false"
VITE_ENABLE_PERFORMANCE_MONITORING="false"

# Development Server
VITE_DEV_SERVER_PORT="5000"
VITE_DEV_SERVER_HOST="localhost"
VITE_DEV_SERVER_OPEN="true"
