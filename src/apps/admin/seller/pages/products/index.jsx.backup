                                      ctx.drawImage(img, 0, 0, targetWidth, targetHeight);

                                      // Yeniden boyutlandƒ±rƒ±lmƒ±≈ü resmi base64'e √ßevir
                                      const resizedImage = canvas.toDataURL('image/jpeg', 0.8);

