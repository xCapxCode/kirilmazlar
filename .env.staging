# ===========================================
# KIRIILMAZLAR STAGING ENVIRONMENT
# ===========================================

# App Configuration
VITE_APP_NAME="Kırılmazlar Panel (Staging)"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT="staging"
VITE_APP_DEBUG="true"

# API Configuration (Staging endpoints)
VITE_API_BASE_URL="https://staging-api.kirilmazlar.com/v1"
VITE_API_TIMEOUT="20000"
VITE_API_RETRY_ATTEMPTS="3"

# Feature Flags (Staging - Mixed settings)
VITE_ENABLE_CONSOLE_LOGS="true"
VITE_ENABLE_DEVELOPER_TOOLS="true"
VITE_ENABLE_MOCK_DATA="false"
VITE_ENABLE_STORAGE_DEBUG="true"

# Performance Settings
VITE_ENABLE_SERVICE_WORKER="true"
VITE_ENABLE_LAZY_LOADING="true"
VITE_BUNDLE_ANALYZER="true"

# Security Settings (Staging - Development-like)
VITE_ENABLE_CSP="true"
VITE_ENABLE_HTTPS="true"
VITE_SESSION_TIMEOUT="2700000"

# Storage Configuration
VITE_STORAGE_TYPE="localStorage"
VITE_STORAGE_PREFIX="kirilmazlar_staging_"
VITE_STORAGE_ENCRYPT="true"

# Monitoring & Analytics (Staging enabled)
VITE_ENABLE_ANALYTICS="true"
VITE_ENABLE_ERROR_REPORTING="true"
VITE_ENABLE_PERFORMANCE_MONITORING="true"

# Build Settings (Staging with sourcemaps)
VITE_BUILD_SOURCEMAP="true"
VITE_BUILD_MINIFY="true"
VITE_BUILD_TARGET="es2017"
