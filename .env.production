# ===========================================
# KIRIILMAZLAR PRODUCTION ENVIRONMENT
# ===========================================

# App Configuration
VITE_APP_NAME="Kırılmazlar Panel"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT="production"
VITE_APP_DEBUG="false"

# Railway Configuration
PORT="3000"

# API Configuration (Railway deployment)
VITE_API_BASE_URL="$RAILWAY_STATIC_URL/api/v1"
VITE_API_TIMEOUT="15000"
VITE_API_RETRY_ATTEMPTS="2"

# API Configuration (Production)
VITE_API_BASE_URL="$RAILWAY_STATIC_URL/api"
VITE_API_TIMEOUT="15000"
VITE_API_RETRY_ATTEMPTS="2"

# Feature Flags (Production optimized)
VITE_ENABLE_CONSOLE_LOGS="false"
VITE_ENABLE_DEVELOPER_TOOLS="false"
VITE_ENABLE_MOCK_DATA="false"
VITE_ENABLE_STORAGE_DEBUG="false"

# Performance Settings (Production optimized)
VITE_ENABLE_SERVICE_WORKER="true"
VITE_ENABLE_LAZY_LOADING="true"
VITE_BUNDLE_ANALYZER="false"

# Security Settings (Production hardened)
VITE_ENABLE_CSP="true"
VITE_ENABLE_HTTPS="true"
VITE_SESSION_TIMEOUT="1800000"

# Storage Configuration (Production secured)
VITE_STORAGE_TYPE="localStorage"
VITE_STORAGE_PREFIX="kirilmazlar_"
VITE_STORAGE_ENCRYPT="true"

# Monitoring & Analytics (Production enabled)
VITE_ENABLE_ANALYTICS="true"
VITE_ENABLE_ERROR_REPORTING="true"
VITE_ENABLE_PERFORMANCE_MONITORING="true"

# Production Build Settings
VITE_BUILD_SOURCEMAP="false"
VITE_BUILD_MINIFY="true"
VITE_BUILD_TARGET="es2015"

# Security Headers
VITE_CSP_DEFAULT_SRC="'self'"
VITE_CSP_SCRIPT_SRC="'self' 'unsafe-inline'"
VITE_CSP_STYLE_SRC="'self' 'unsafe-inline'"
VITE_CSP_IMG_SRC="'self' data: https:"
